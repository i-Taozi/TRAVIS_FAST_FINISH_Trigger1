<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            >

            <!-- title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/support_development"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_github"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openPage"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/image_github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_github"
                    android:layout_centerVertical="true"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/image_github"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/text_view_github"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/github"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_view_github"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:text="@string/github_summary"
                        android:textSize="12sp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/contributors"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_view_contributor_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor1_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_contributor_1_title"
                    android:text="@string/contributor1_username"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_view_contributor_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor2_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_contributor_2_title"
                    android:text="@string/contributor2_username"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_view_contributor_3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor3_name"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_contributor_3_title"
                    android:text="@string/contributor3_username"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_view_contributor_4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor4_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_contributor_4_title"
                    android:text="@string/contributor4_username"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_view_contributor_5_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor5_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_contributor_5_title"
                    android:text="@string/contributor5_username"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_see_all_contributors"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:onClick="openPage"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="@string/see_all_contributors"
                    />
            </RelativeLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>